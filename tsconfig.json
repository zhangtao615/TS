{
    "compilerOptions": {
        "target":"ES2015",
        "module": "AMD",

        "lib": [],
        "allowJs": true,
        "checkJs": true,
        "jsx": "preserve",

        "declaration": true,
        "sourceMap": true,
        "outFile": "./",
        "outDir":"./",
        "rootDir": "./",
        "removeComments": true,
        "noEmit":false,
        "importHelpers": true,
        "isolatedModules": true,

        "strict": true,
        "noImplicitAny":true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict":true,
        
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {},
        "rootDirs": [],
        "typeRoots": [],
        "types": [],
        "allowSyntheticDefaultImports": true,

        "sourceRoot": "./",
        "mapRoot": "./",
        "inlineSourceMap": true,
        "inlineSources": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true

    }
}